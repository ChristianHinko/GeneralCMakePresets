{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle."
    ],
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "debug-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "testPresets": [
        {
            "name": "debug-base",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "release-base",
            "hidden": true,
            "configuration": "Release"
        }
    ]
}
