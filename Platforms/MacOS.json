{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle."
    ],
    "include": [
        "${sourceDir}/CMake/GenericCMakePresets/Base.json",
        "${sourceDir}/CMake/GenericCMakePresets/Platforms/Base.json",
        "${sourceDir}/CMake/GenericCMakePresets/Generators/Base.json"
    ],
    "configurePresets": [
        {
            "name": "macos-debug-default",
            "displayName": "macOS Debug (Default)",
            "inherits": [
                "base",
                "macos-base",
                "debug-base"
            ]
        },
        {
            "name": "macos-release-default",
            "displayName": "macOS Release (Default)",
            "inherits": [
                "base",
                "macos-base",
                "release-base"
            ]
        },
        {
            "name": "macos-debug-ninja",
            "displayName": "macOS Debug (Ninja)",
            "inherits": [
                "macos-debug-default",
                "ninja-base"
            ]
        },
        {
            "name": "macos-release-ninja",
            "displayName": "macOS Release (Ninja)",
            "inherits": [
                "macos-release-default",
                "ninja-base"
            ]
        },
        {
            "name": "macos-debug-xcode",
            "displayName": "macOS Debug (Xcode)",
            "inherits": [
                "macos-debug-default",
                "xcode-base"
            ]
        },
        {
            "name": "macos-release-xcode",
            "displayName": "macOS Release (Xcode)",
            "inherits": [
                "macos-release-default",
                "xcode-base"
            ]
        },
        {
            "name": "macos-debug-unix-makefiles",
            "displayName": "macOS Debug (Unix Makefiles)",
            "inherits": [
                "macos-debug-default",
                "unix-makefiles-base"
            ]
        },
        {
            "name": "macos-release-unix-makefiles",
            "displayName": "macOS Release (Unix Makefiles)",
            "inherits": [
                "macos-release-default",
                "unix-makefiles-base"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "configurePreset": "macos-debug-default"
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "configurePreset": "macos-release-default"
        }
    ],
    "testPresets": [
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "inherits": [
                "debug-base"
            ],
            "configurePreset": "macos-debug-default"
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "inherits": [
                "release-base"
            ],
            "configurePreset": "macos-release-default"
        }
    ]
}
